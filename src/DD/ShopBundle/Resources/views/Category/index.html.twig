{% block content -%}
    <h1 class="text-center">Category list</h1>
    <div class="count">
        This category have {{ entities.getTotalItemCount }} products :)
    </div>
    <ul>
        <li>
            <a href="{{ path('category_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>{{ 'Name'|trans|raw }}</th>
            <th>{{ 'Description'|trans|raw }}</th>
            <th>{{ 'Level'|trans|raw }}</th>
            <th>{{ 'Flag'|trans|raw }}</th>
            <th>{{ 'Actions'|trans|raw }}</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('category_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.level }}</td>
                <td>{{ entity.flag }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('category_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('category_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div>
        {{ knp_pagination_render(entities) }}
    </div>
{% endblock %}