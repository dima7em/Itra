{% extends 'DDShopBundle::layout.html.twig' %}

{% block content -%}
    <h1>Category</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>{{ 'Name'|trans|raw }}</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>{{ 'Description'|trans|raw }}</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>{{ 'Level'|trans|raw }}</th>
                <td>{{ entity.level }}</td>
            </tr>
            <tr>
                <th>{{ 'Flag'|trans|raw }}</th>
                <td>{{ entity.flag }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('category') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('category_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
            {% if is_granted('ROLE_ADMIN') %}
                <li>{{ form(delete_form) }}</li>
            {% endif %}
</ul>
{% endblock %}
