{% extends 'DDShopBundle::layout.html.twig' %}

{% block body -%}
    {% if error %}
        <div>{{ error.message }}</div>
    {% endif %}
<div class=" foter container text-center form-horizontal">
    <div class="form-goup">
    <form class="" action="{{ path('login_check') }}" method="post">
        <label for="username">Username:</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" />

        <label for="password">Password:</label>
        <input type="password" id="password" name="_password" />

        {#
            If you want to control the URL the user
            is redirected to on success (more details below)
            <input type="hidden" name="_target_path" value="/account" />
        #}
        <input type="hidden" name="_target_path" value="/index" />

        <button class="btn-primary btn btn-block" type="submit">login</button>
    </form>
    </div>
</div>
{% endblock %}
