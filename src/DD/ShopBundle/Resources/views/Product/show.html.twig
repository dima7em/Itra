{% extends 'DDShopBundle::layout.html.twig' %}

{% block content -%}
    <h1>Product</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Src</th>
                <td>
                    {% if entity.src == true %}
                        <img src="{{ entity.src }}"/>
                    {% else %}
                        {{ entity.src }}
                    {% endif  %}
                </td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ entity.date|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Lastdate</th>
                <td>{{ entity.lastdate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Flag</th>
                <td>{{ entity.flag }}</td>
            </tr>
        </tbody>
    </table>
    {% if is_granted('ROLE_MODERATOR') %}
        <ul class="record_actions">
    <li>
        <a href="{{ path('product') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('product_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
            {% if is_granted('ROLE_ADMIN') %}
                <li>{{ form(delete_form) }}</li>
            {% endif %}
</ul>
    {% endif %}
{% endblock %}
